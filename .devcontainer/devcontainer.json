{
  "name": "cookie-store",
  "build": { "dockerfile": "Dockerfile" },
  "features": {
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "redhat.java",
        "vscjava.vscode-java-debug",
        "vscjava.vscode-java-test",
        "vscjava.vscode-maven",
        "vscjava.vscode-gradle",
        "vscjava.vscode-java-dependency",
        "vscjava.vscode-java-pack",
        "GitHub.vscode-pull-request-github",
        "openai.chatgpt"
      ]
    }
  },
  "runArgs": ["--security-opt", "label=disable", "--name", "cookie-store", "--network", "core-facturae_sail"],
  "containerEnv": {
    "SPRING_PROFILES_ACTIVE": "staging",
    "SPRING_DATASOURCE_URL": "jdbc:postgresql://core-factu-api-pgsql:5432/cookies_store",
    "SPRING_DATASOURCE_USERNAME": "core",
    "SPRING_DATASOURCE_PASSWORD": "secret",
    "SPRING_REDIS_HOST": "core-factu-api-redis",
    "SPRING_REDIS_PORT": "6379",
    "STAGING_SUPER_ADMIN_PASSWORD": "admin123"
  },
  "remoteUser": "vscode",
  "updateRemoteUserUID": false,
  "mounts": [
    "source=gradle-cache-local,target=/home/vscode/.gradle,type=volume"
  ]
}
